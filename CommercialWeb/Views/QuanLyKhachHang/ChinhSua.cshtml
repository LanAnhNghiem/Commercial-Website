@model CommercialWeb.Models.KhachHang

@{
    ViewBag.Title = "ChinhSua";
    Layout = "~/Views/Layout/AdminLayout.cshtml";
}

@*-----------------Address Link------------------------*@
<p class="home"><a href="@Url.Action("IndexQuanLyKH", "QuanLyKhachHang")">Trang chủ</a> > <strong> Sửa thông tin khách hàng</strong></p>
<br />
@*-------------------------Page Name--------------------*@
<h1 style="font-weight:bold; margin:5px; padding-bottom:1em; text-align:center">THÔNG TIN KHÁCH HÀNG <span style="color:blue">@Model.HoTen</span> </h1>
@if (ViewBag.ThongBao != null)
{
    <div id="thanhcong" class="alert alert-success alert-dismissible">
        <strong>@ViewBag.ThongBao</strong> Cập nhật thông tin khách hàng. <b><a id="backLink" href="@Url.Action("IndexQuanLyKH")">Xem danh sách khách hàng</a></b>
    </div>
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
           @Html.HiddenFor(model => model.MaKH)
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Họ tên</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.HoTen, new { htmlAttributes = new { @class = "form-control", @required = "required" } })
                @Html.ValidationMessageFor(model => model.HoTen, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Email</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Số điện thoại</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.SoDienThoai, new { htmlAttributes = new { @class = "form-control", @required = "required" } })
                @Html.ValidationMessageFor(model => model.SoDienThoai, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class = "control-label col-md-2" >Địa chỉ</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.DiaChi, new { htmlAttributes = new { @class = "form-control", @required = "required" } })
                @Html.ValidationMessageFor(model => model.DiaChi, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
                @Html.HiddenFor(model => model.MaThanhVien)
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <a class="btn btn-info" href="@Url.Action("IndexQuanLyKH", "QuanLyKhachHang")">Quay lại</a>
                <input type="submit" value="Cập nhật" class="btn btn-success" style="margin-left: 1em" />
            </div>
        </div>
    </div>
}
<style>
    #backLink{
        color:#3c763d;
        text-decoration:underline;
    }
</style>
