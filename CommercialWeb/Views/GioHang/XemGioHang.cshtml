                <!--Bảng cước phí theo từng khu vực-->
                <div class="table-content table-responsive mb-50">
                    <table class="text-center">
                        <thead>
                            <tr>
                                <th style="font-weight:bold">Khu vực</th>
                                <th style="font-weight:bold">Cước phí</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>Hồ Chí Minh</td>
                                <td>10,000 VND</td>
                            </tr>
                            <tr>
                                <td>Đà Nẵng-Hà Nội</td>
                                <td>14,000 VND</td>
                            </tr>
                            <tr>
                                <td>Miền Nam</td>
                                <td>13,000 VND</td>
                            </tr>
                            <tr>
                                <td>Miền Trung</td>
