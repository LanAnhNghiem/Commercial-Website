                            <table >
                                <tbody>
                                    <tr>
                                        <td class="td-title-1" >Tạm tính</td>
                                        <td class="td-title-2" id="tamtinh">0 VND</td>
                                    </tr>
                                    <tr>
                                        <td class="td-title-1">Phí vận chuyển (chưa tính)</td>
