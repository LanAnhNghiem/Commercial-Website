@*San pham khuyen mai*@
@Html.Partial("~/Views/SanPham/SanPhamKhuyenMaiPartial.cshtml", lstSanPhamKhuyenMai)

@*Danh sach cac san pham*@
<!-- PRODUCT TAB SECTION START -->
