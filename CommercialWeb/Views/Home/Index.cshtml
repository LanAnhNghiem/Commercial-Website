@using CommercialWeb.Models;
@model IEnumerable<SanPham>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Layout/HomeLayout.cshtml";
}

@{ 
    IEnumerable<SanPham> lstSanPhamMoi = ViewBag.ListSanPhamMoi as IEnumerable<SanPham>;
    IEnumerable<SanPham> lstLaptopNoiBat = ViewBag.ListLaptopNoiBat as IEnumerable<SanPham>;
    IEnumerable<SanPham> lstSanPhamKhuyenMai = ViewBag.ListSanPhamKhuyenMai as IEnumerable<SanPham>;

    IEnumerable<SanPham> lstLaptop = ViewBag.ListLaptop as IEnumerable<SanPham>;
    IEnumerable<SanPham> lstMayTinh = ViewBag.ListMayTinh as IEnumerable<SanPham>;
    IEnumerable<SanPham> lstLinhKien = ViewBag.ListLinhKien as IEnumerable<SanPham>;
}

@*San pham moi*@
@Html.Partial("~/Views/SanPham/SanPhamMoiPartial.cshtml", lstSanPhamMoi)

@*San pham Laptop noi bat*@
